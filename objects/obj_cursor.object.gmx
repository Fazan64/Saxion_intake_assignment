var turret = instance_nearest(x, y, obj_turret);
if (turret == noone) {
    exit;
}

var distance_to_turret = point_distance(x, y, turret.x, turret.y);

// If the mouse is within a circle around the turret,
// move the cursor outward to its edge
if (distance_to_turret &lt; min_distance_to_turret) {

    if (distance_to_turret == 0) {
        
        x = turret.x + min_distance_to_turret;
        y = turret.y;
        
    } else {
    
        var delta_x = x - turret.x;
        var delta_y = y - turret.y;
        
        var delta_x_normalized = delta_x / distance_to_turret;
        var delta_y_normalized = delta_y / distance_to_turret;
        
        x = turret.x + delta_x_normalized * min_distance_to_turret;
        y = turret.y + delta_y_normalized * min_distance_to_turret;
    }
}
</string>
